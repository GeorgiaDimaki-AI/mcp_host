{
  "name": "@gdimaki-ai/mcp-webview-host",
  "version": "0.2.0-beta",
  "description": "Secure webview host for Model Context Protocol (MCP) servers with elicitation support",
  "main": "backend/dist/server.js",
  "bin": {
    "mcp-webview-host": "./bin/cli.js"
  },
  "scripts": {
    "build:all": "npm run build:frontend && npm run build:backend",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "prepack": "npm run install:all && npm run build:all",
    "start": "node bin/cli.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "webview",
    "llm",
    "security",
    "elicitation",
    "sandbox"
  ],
  "author": "Georgia Dimaki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeorgiaDimaki-AI/mcp_host.git"
  },
  "homepage": "https://github.com/GeorgiaDimaki-AI/mcp_host#readme",
  "bugs": {
    "url": "https://github.com/GeorgiaDimaki-AI/mcp_host/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "files": [
    "backend/dist",
    "backend/package.json",
    "backend/mcp-config.json",
    "backend/mcp-config.example.json",
    "backend/certificates",
    "frontend/dist",
    "frontend/package.json",
    "examples",
    "bin",
    "README.md",
    "docs"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "open": "^10.0.3",
    "ws": "^8.16.0"
  }
}
